@using System.Globalization
@using System.Security.Claims
@model Products

<link href="~/css/ckeditor.css" rel="stylesheet" />
<link href="~/css/map.css" rel="stylesheet" />
<link href="~/css/Details.css" rel="stylesheet" />
<link rel="stylesheet"
      href="https://cdn.ckeditor.com/ckeditor5/45.2.1/ckeditor5.css"
      crossorigin />
<link href="https://unpkg.com/maplibre-gl@3.1.0/dist/maplibre-gl.css" rel="stylesheet">
<script src="https://unpkg.com/maplibre-gl@3.1.0/dist/maplibre-gl.js"></script>
<link href="~/css/payment.css" rel="stylesheet" />

@{
    ViewData["Title"] = Model.Name;
    ViewData["MetaTag"] = Model.MetaTag;

    long? currentUserId = null;
    var userIdString = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;

    if (!string.IsNullOrEmpty(userIdString) && long.TryParse(userIdString, NumberStyles.Integer, CultureInfo.InvariantCulture, out long parsedId))
    {
        currentUserId = parsedId;
    }

    bool isAdmin = User.IsInRole("Admin");
    string? userEmail = Assignment.Utilities.CookieAuthHelper.GetEmail(User);
    string? userPhone = Assignment.Utilities.CookieAuthHelper.GetPhone(User);
}

<script>
    fetch(`/api/evaluate/check/${@Model.Id}`)
        .then((response) => {
            if (response.status === 422 || response.status === 401) {
                return response.json();
            }

            if (!response.ok) {
                return showErrorToast(
                    "Lỗi khi tải dử liệu. Vui lòng thử lại sau.",
                    4000
                );
            }

            return response.json();
        })
        .then((data) => {
            if ((data.code = "PURCHASED")) {
                document.getElementById(
                    "cmt"
                ).innerHTML = `<button type="button" class="btn-create-review" data-bs-toggle="modal" data-bs-target="#createAndUpdateModal" onclick="startCreate()">Tạo đánh giá</button>`;
            }
        });
</script>

<div class="container-fluid">
    <!-- Product Header Section -->
    <div class="product-header fade-in">
        <div class="row align-items-center">
            <div class="col-12 col-lg-5">
                <div class="product-image slide-in-left">
                    <img src="@Model.ProductImageUrl" alt="@Model.Name" class="img-fluid"/>
                </div>
            </div>
            <div class="col-12 col-lg-7">
                <div class="product-info slide-in-right">
                    <h1 class="product-title">@Model.Name</h1>
                    
                    <div class="rating-section">
                        <span class="rating-text">Đánh giá:</span>
                        <strong>@Model.AverageEvaluate</strong>
                        <div class="rating-stars">
                            @{
                                double averageEvaluate = Model.AverageEvaluate;
                                for (int i = 1; i <= 5; i++)
                                {
                                    if (averageEvaluate >= i)
                                    {
                                        <i class="fa-solid fa-star"></i>
                                    }
                                    else if (averageEvaluate >= i - 0.5)
                                    {
                                        <i class="fa-regular fa-star-half-stroke"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-regular fa-star"></i>
                                    }
                                }
                            }
                        </div>
                        <span class="rating-text">(@Model.TotalEvaluate.ToString("N0") lượt đánh giá)</span>
                    </div>
                    
                    <div class="stock-info">
                        <i class="fas fa-chart-line me-2"></i>
                        Đã bán @Model.Sold.ToString("N0") | 
                        <i class="fas fa-boxes me-1"></i>
                        Còn lại @Model.Stock.ToString("N0")
                    </div>
                    
                    <div class="price-section">
                        @if (Model.Discount > 0)
                        {
                            <div class="d-flex align-items-center gap-3 mb-2">
                                <span class="discount-badge">-@Model.Discount%</span>
                                <span class="current-price">@((Model.Price - ((Model.Price / 100) * Model.Discount)).ToString("C0"))</span>
                            </div>
                            <div class="original-price">Giá gốc: @Model.Price.ToString("C0")</div>
                        }
                        else
                        {
                            <div class="current-price">@Model.Price.ToString("C0")</div>
                        }
                    </div>
                    
                    <div class="quantity-controls">
                        <button class="quantity-btn" onclick="reduce()">
                            <i class="fas fa-minus"></i>
                        </button>
                        <input type="number" class="form-control quantity-input" id="quantity" style="max-width: 120px" value="1" min="1">
                        <button class="quantity-btn" onclick="increase()">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                    
                    <div class="action-buttons">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <button class="btn-luxury btn-buy-now" data-bs-toggle="modal" data-bs-target="#buyModal" onclick="startBuyNow(@Model.Id, '@Model.Name', @Model.Price)">
                                <i class="fas fa-bolt me-2"></i>Mua ngay
                            </button>
                        }
                        <button class="btn-luxury btn-add-cart" onclick="addToCart(@Model.Id)">
                            <i class="fas fa-shopping-cart me-2"></i>Thêm vào giỏ hàng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Details Section -->
    <div class="product-details fade-in">
        <h2 class="section-title">
            <i class="fas fa-info-circle me-2"></i>Chi tiết sản phẩm
        </h2>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-leaf me-2"></i>Loại món
            </div>
            <div class="detail-value">
                @if (Model.IsVegetarian)
                {
                    <span class="vegetarian-badge">
                        <i class="fas fa-seedling me-1"></i>Đồ chay
                    </span>
                }
                else
                {
                    <span class="badge bg-secondary">
                        <i class="fas fa-drumstick-bite me-1"></i>Đồ mặn
                    </span>
                }
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-fire me-2"></i>Độ cay
            </div>
            <div class="detail-value">
                @if (Model.IsSpicy)
                {
                    <span class="spicy-badge">
                        <i class="fas fa-pepper-hot me-1"></i>Cay
                    </span>
                }
                else
                {
                    <span class="badge bg-success">
                        <i class="fas fa-smile me-1"></i>Không cay
                    </span>
                }
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-clock me-2"></i>Thời gian chuẩn bị
            </div>
            <div class="detail-value">
                <strong>@Model.PreparationTime phút</strong>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-dumbbell me-2"></i>Calories
            </div>
            <div class="detail-value">
                <strong>@Model.Calories kcal</strong>
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-list-ul me-2"></i>Thành phần
            </div>
            <div class="detail-value">
                @Model.Ingredients
            </div>
        </div>
    </div>

    <!-- Description Section -->
    <div class="description-section fade-in">
        <h2 class="section-title">
            <i class="fas fa-file-text me-2"></i>Mô tả sản phẩm
        </h2>
        <div class="description-content">
            @Html.Raw(Model.Description)
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="reviews-section fade-in">
        <h2 class="section-title">
            <i class="fas fa-star me-2"></i>Đánh giá từ khách hàng
        </h2>
        
        <div class="review-actions">
            <span id="cmt"></span>
        </div>
        
        @foreach (Evaluates evaluates in @Model.Evaluates)
        {
            <div class="review-item">
                <div class="review-header">
                    <h5 class="reviewer-name">
                        <i class="fas fa-user-circle me-2"></i>@evaluates.User.Name
                    </h5>
                    <div class="review-stars">
                        @{
                            double averageEvaluateMini = evaluates.Star;
                            for (int i = 1; i <= 5; i++)
                            {
                                if (averageEvaluateMini >= i)
                                {
                                    <i class="fa-solid fa-star"></i>
                                }
                                else if (averageEvaluateMini >= i - 0.5)
                                {
                                    <i class="fa-regular fa-star-half-stroke"></i>
                                }
                                else
                                {
                                    <i class="fa-regular fa-star"></i>
                                }
                            }
                        }
                    </div>
                </div>
                
                <div class="review-content">
                    @Html.Raw(evaluates.Content)
                </div>
                
                @if (User.Identity.IsAuthenticated && (isAdmin || (currentUserId.HasValue && currentUserId.Value == evaluates.UserId)))
                {
                    <div class="review-actions-buttons">
                        <button class="btn-edit-review" data-bs-toggle="modal" data-bs-target="#createAndUpdateModal" onclick="startUpdate(@evaluates.Id, @evaluates.Star, '@evaluates.Content')">
                            <i class="fas fa-edit me-1"></i>Sửa
                        </button>
                        <button class="btn-delete-review" data-bs-toggle="modal" data-bs-target="#deleteModal" onclick="startDelete(@evaluates.Id)">
                            <i class="fas fa-trash me-1"></i>Xóa
                        </button>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Modals -->
<div>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <!-- Buy Now Modal -->
        <div class="modal fade" id="buyModal" tabindex="-1" aria-labelledby="buyModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="buyModalLabel">
                            <i class="fas fa-shopping-bag me-2"></i>Mua ngay
                        </h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-4">
                            <h2 class="h3 mb-4">
                                <i class="fas fa-user me-2"></i>Thông tin người nhận
                            </h2>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">
                                        <i class="fas fa-user me-1"></i>Tên người nhận
                                    </label>
                                    <input type="text" class="form-control" id="name" placeholder="ví dụ: Bùi Đăng Khoa" value="@User.Identity.Name">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="phone" class="form-label">
                                        <i class="fas fa-phone me-1"></i>Số điện thoại
                                    </label>
                                    <input type="text" class="form-control" id="phone" placeholder="ví dụ: 0999999999" value="@userPhone">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>Email (Tùy chọn)
                                </label>
                                <input type="email" class="form-control" id="email" placeholder="ví dụ: khoabdtb00417@fpt.edu.vn" value="@userEmail">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-map-marker-alt me-1"></i>Địa chỉ nhận
                                </label>
                                <div class="map-container">
                                    <div id="map"></div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="voucher" class="form-label">
                                    <i class="fas fa-ticket-alt me-1"></i>Mã giảm giá (Tùy chọn)
                                </label>
                                <input type="text" class="form-control" id="voucher" placeholder="ví dụ: GIAM100">
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <h2 class="h3 mb-4">
                                <i class="fas fa-box me-2"></i>Thông tin sản phẩm
                            </h2>
                            <div class="row">
                                <div class="col-md-8 mb-3">
                                    <label for="productName" class="form-label">
                                        <i class="fas fa-tag me-1"></i>Tên sản phẩm
                                    </label>
                                    <input type="text" class="form-control" id="productName" readonly="">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="productQuantity" class="form-label">
                                        <i class="fas fa-sort-numeric-up me-1"></i>Số lượng
                                    </label>
                                    <input type="number" class="form-control" id="productQuantity" placeholder="ví dụ: 999" value="1" min="1">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="productPrice" class="form-label">
                                    <i class="fas fa-money-bill-wave me-1"></i>Tổng hóa đơn
                                </label>
                                <input type="text" class="form-control" id="productPrice" readonly="">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>Đóng
                        </button>
                        <button type="button" class="btn btn-success btn-luxury" onclick="buyNow()">
                            <i class="fas fa-credit-card me-1"></i>Thanh toán
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Modal -->
        <div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="paymentModalLabel">
                            <i class="fas fa-credit-card me-2"></i>Thông tin thanh toán
                        </h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <div class="payment-card text-center mb-4">
                                <h5 class="mb-4">
                                    <i class="fas fa-qrcode me-2"></i>Cách 1: Mở app ngân hàng và quét mã QR
                                </h5>
                                <div class="qr-code-section mb-4">
                                    <img id="paymentQrCode" alt="Payment QR Code" class="img-fluid" style="max-width: 300px;">
                                </div>
                                <div id="status_payment"></div>
                            </div>

                            <div class="payment-card mb-4">
                                <h5 class="mb-4 text-center">
                                    <i class="fas fa-university me-2"></i>Cách 2: Chuyển khoản thủ công theo thông tin
                                </h5>
                                <div class="text-center mb-3">
                                    <img src="https://qr.sepay.vn/assets/img/banklogo/MB.png" alt="MBBank Logo" style="height: 40px;"> 
                                    <p class="mt-2 mb-0 fw-bold">Ngân hàng <span id="bank"></span></p>
                                </div>
                                <div class="bank-info-section">
                                    <div class="row mb-2">
                                        <div class="col-5 label">
                                            <i class="fas fa-user me-1"></i>Chủ tài khoản:
                                        </div>
                                        <div class="col-7 text-end fw-bold" id="account_name"></div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-5 label">
                                            <i class="fas fa-credit-card me-1"></i>Số tài khoản:
                                        </div>
                                        <div class="col-7 text-end fw-bold text-danger" id="account_no"></div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-5 label">
                                            <i class="fas fa-money-bill-wave me-1"></i>Số tiền:
                                        </div>
                                        <div class="col-7 text-end fw-bold text-danger" id="bill"></div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-5 label">
                                            <i class="fas fa-comment me-1"></i>Nội dung chuyển khoản:
                                        </div>
                                        <div class="col-7 text-end fw-bold text-danger" id="orderId"></div>
                                    </div>
                                </div>
                                <div class="alert alert-warning mt-3">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Lưu ý:</strong> Vui lòng giữ nguyên nội dung chuyển khoản <span id="orderId2" class="fw-bold"></span> để hệ thống tự động xác nhận thanh toán
                                </div>
                            </div>
                            
                            <div class="payment-card">
                                <h5 class="mb-3">
                                    <i class="fas fa-receipt me-2"></i>Chi tiết đơn hàng
                                </h5>
                                <ul class="list-group mb-3" id="listProduct"></ul>
                                <div class="border-top pt-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span><i class="fas fa-calculator me-1"></i>Tổng hóa đơn</span>
                                        <span id="totalPrice" class="fw-bold"></span>
                                    </div>
                                    <div id="discount"></div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span><i class="fas fa-truck me-1"></i>Phí giao hàng</span>
                                        <span id="fee" class="fw-bold"></span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span><i class="fas fa-percent me-1"></i>Thuế VAT</span>
                                        <span id="vat" class="fw-bold"></span>
                                    </div>
                                    <hr>
                                    <div class="d-flex justify-content-between">
                                        <span class="fs-5"><i class="fas fa-money-check-alt me-1"></i><strong>Tổng tiền</strong></span>
                                        <span id="totalBill" class="fw-bold fs-5 text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>Đóng
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <button type="button" id="paymentModelBtn" style="display: none" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#paymentModal">
            Open payment model
        </button>
    }
    
    <!-- Create/Update Review Modal -->
    <div class="modal fade" id="createAndUpdateModal" tabindex="-1" aria-labelledby="createAndUpdateModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="createAndUpdateModalLabel">
                        <i class="fas fa-star me-2"></i>Tạo và sửa đánh giá
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-4">
                        <label for="star" class="form-label">
                            <i class="fas fa-star me-1"></i>Đánh giá (1-5 sao)
                        </label>
                        <input type="range" min="1" max="5" value="5" step="0.5" class="form-range" id="star">
                        <div class="text-center mt-2">
                            <span class="badge bg-warning text-dark fs-6">
                                <span id="starValue">5</span> <i class="fas fa-star"></i>
                            </span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-comment me-1"></i>Nội dung đánh giá
                        </label>
                        <div class="main-container">
                            <div class="editor-container editor-container_document-editor editor-container_include-word-count"
                                 id="editor-container">
                                <div class="editor-container__menu-bar" id="editor-menu-bar"></div>
                                <div class="editor-container__toolbar" id="editor-toolbar"></div>
                                <div class="editor-container__editor-wrapper">
                                    <div class="editor-container__editor">
                                        <div id="editor"></div>
                                    </div>
                                </div>
                                <div class="editor_container__word-count" id="editor-word-count"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Đóng
                    </button>
                    <button type="button" class="btn btn-primary btn-luxury" id="createAndUpdateButton">
                        <i class="fas fa-save me-1"></i>Lưu đánh giá
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Delete Review Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h1 class="modal-title fs-5" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Xóa đánh giá
                    </h1>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center py-3">
                        <i class="fas fa-trash-alt text-danger" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 mb-3">Bạn có chắc chắn muốn xóa đánh giá này?</h5>
                        <p class="text-muted">Hành động này không thể hoàn tác.</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Hủy
                    </button>
                    <button type="button" class="btn btn-danger" onclick="del()">
                        <i class="fas fa-trash me-1"></i>Xóa đánh giá
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
<script src="~/js/buynow.js"></script>
<script src="~/js/addCart.js"></script>
<script src="https://cdn.ckeditor.com/ckeditor5/45.2.1/ckeditor5.umd.js" crossorigin></script>
<script src="~/js/evaluate.js"></script>
<script>
    selectedProduct = @Model.Id;
</script>