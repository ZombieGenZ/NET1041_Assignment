                                <div class="mb-3">
                                    <label for="log_emailorphone" class="form-label">Địa chỉ email hoặc số diện thoại</label>
                                    <input type="email" class="form-control" id="log_emailorphone" placeholder="Nhập địa địa chỉ email hoặc số diện thoại của bạn" required>
                                </div>
                                <div class="mb-3">
                                    <label for="log_password" class="form-label">Mật khẩu</label>
                                    <div class="password-input-container">
                                        <input type="password" class="form-control" id="log_password" placeholder="Nhập mật khẩu">
                                        <button class="password-toggle-button" type="button" id="togglePassword">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                </div>
                                <button class="btn btn-primary w-100 py-2" onclick="Login()">Đăng nhập</button>
