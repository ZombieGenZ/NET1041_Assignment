<link href="~/css/password.css" rel="stylesheet" />
@{

    ViewData["Title"] = "Đặt lại mật khẩu";
    if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <script>
            location.href = '@Url.Action("Index", "Home")';
        </script>
        return;
    }
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Đặt lại mật khẩu</h2>
                    <div class="row">
                        <div>
                            <div class="mb-3">
                                <label for="rp_password" class="form-label">Mật khẩu</label>
                                <div class="password-input-container">
                                    <input type="password" class="form-control" id="rp_password" placeholder="Nhập mật khẩu">
                                    <button class="password-toggle-button" type="button" id="togglePassword">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="rp_confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                                <div class="password-input-container">
                                    <input type="password" class="form-control" id="rp_confirmPassword" placeholder="Xác nhận mật khẩu của bạn">
                                    <button class="password-toggle-button" type="button" id="toggleConfirmPassword">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                            </div>
                            <button class="btn btn-warning w-100 py-2" onclick="ResetPassword()">Đặt lại mật khẩu</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/resetPassword.js"></script>