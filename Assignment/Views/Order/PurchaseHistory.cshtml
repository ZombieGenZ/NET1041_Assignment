@using Assignment.Enum
@model SearchPurchaseHistoryModel
<link href="~/css/payment.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Lịch sử mua hàng";
}

<div>
    <div class="row mt-3">
        <h1>Lịch sử mua hàng</h1>
    </div>

    <div class="row mt-3 mb-3">
        <div class="col-md-6 offset-md-3">
            <div class="input-group gap-3">
                <div class="col">
                    <label for="startTime" class="form-label">Thời gian bắt đầu</label>
                    <input type="date" class="form-control" id="startTime" value="@Model.StartTime?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col">
                    <label for="endTime" class="form-label">Thời gian kết thúc</label>
                    <input type="date" class="form-control" id="endTime" value="@Model.EndTime?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col">
                    <label for="status" class="form-label">Trạng thái</label>
                    <select class="form-select" id="status">
                        @if (Model.Status != null && Model.Status == OrderStatus.Ordered)
                        {
                            <option value="-1">Tất cả</option>
                            <option value="0" selected>Đã đặt hàng</option>
                            <option value="1">Đã thanh toán</option>
                            <option value="2">Đã xác nhận</option>
                            <option value="3">Đang giao hàng</option>
                            <option value="4">Đã hoàn thành</option>
                            <option value="5">Đã hủy</option>
                        }
                        else if (Model.Status != null && Model.Status == OrderStatus.Paid)
                        {
                            <option value="-1">Tất cả</option>
                            <option value="0">Đã đặt hàng</option>
                            <option value="1" selected>Đã thanh toán</option>
                            <option value="2">Đã xác nhận</option>
                            <option value="3">Đang giao hàng</option>
                            <option value="4">Đã hoàn thành</option>
                            <option value="5">Đã hủy</option>
                        }
                        else if (Model.Status != null && Model.Status == OrderStatus.Confirmed)
                        {
                            <option value="-1">Tất cả</option>
                            <option value="0">Đã đặt hàng</option>
                            <option value="1">Đã thanh toán</option>
                            <option value="2" selected>Đã xác nhận</option>
                            <option value="3">Đang giao hàng</option>
                            <option value="4">Đã hoàn thành</option>
                            <option value="5">Đã hủy</option>
                        }
                        else if (Model.Status != null && Model.Status == OrderStatus.Delivery)
                        {
                            <option value="-1">Tất cả</option>
                            <option value="0">Đã đặt hàng</option>
                            <option value="1">Đã thanh toán</option>
                            <option value="2">Đã xác nhận</option>
                            <option value="3" selected>Đang giao hàng</option>
                            <option value="4">Đã hoàn thành</option>
                            <option value="5">Đã hủy</option>
                        }
                        else if (Model.Status != null && Model.Status == OrderStatus.Completed)
                        {
                            <option value="-1">Tất cả</option>
                            <option value="0">Đã đặt hàng</option>
                            <option value="1">Đã thanh toán</option>
                            <option value="2">Đã xác nhận</option>
                            <option value="3">Đang giao hàng</option>
                            <option value="4" selected>Đã hoàn thành</option>
                            <option value="5">Đã hủy</option>
                        }
                        else if (Model.Status != null && Model.Status == OrderStatus.Cancelled)
                        {
                            <option value="-1">Tất cả</option>
                            <option value="0">Đã đặt hàng</option>
                            <option value="1">Đã thanh toán</option>
                            <option value="2">Đã xác nhận</option>
                            <option value="3">Đang giao hàng</option>
                            <option value="4">Đã hoàn thành</option>
                            <option value="5" selected>Đã hủy</option>
                        }
                        else
                        {
                            <option value="-1">Tất cả</option>
                            <option value="0">Đã đặt hàng</option>
                            <option value="1">Đã thanh toán</option>
                            <option value="2">Đã xác nhận</option>
                            <option value="3">Đang giao hàng</option>
                            <option value="4">Đã hoàn thành</option>
                            <option value="5">Đã hủy</option>
                        }
                    </select>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3">
                <button class="btn btn-primary" onclick="search()">
                    <i class="fa-solid fa-filter"></i>
                    Lọc
                </button>
            </div>
        </div>
    </div>
    
    <div class="accordion" id="orderList">
        @if (Model.Data.Count > 0)
        {
            @foreach (Orders order in Model.Data)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#order-@order.Id" aria-expanded="true" aria-controls="order-@order.Id">
                            @if (order.Status == OrderStatus.Ordered)
                            {
                                <span class="badge bg-primary">Đã đặt hàng</span>
                            }
                            else if (order.Status == OrderStatus.Paid)
                            {
                                <span class="badge bg-warning">Đã Thanh toán</span>
                            }
                            else if (order.Status == OrderStatus.Confirmed)
                            {
                                <span class="badge bg-success">Đã xác nhận</span>
                            }
                            else if (order.Status == OrderStatus.Delivery)
                            {
                                <span class="badge bg-primary">Đang giao hàng</span>
                            }
                            else if (order.Status == OrderStatus.Completed)
                            {
                                <span class="badge bg-success">Đã hoàn thành</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Đã hủy</span>
                            }
                            <span>&nbsp;Order: #@order.Id - Ngày đặt: @order.CreatedTime.ToString("dd/MM/yyyy")</span>
                        </button>
                    </h2>
                    <div id="order-@order.Id" class="accordion-collapse collapse" data-bs-parent="#orderList">
                        <div class="accordion-body">
                            <ul class="list-group list-group-numbered">
                                @foreach (OrderDetail detail in order.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold"><a href="/products/@detail.Product.Path" class="text-black text-decoration-none">@detail.Product.Name</a></div>
                                            @detail.PricePreItems.ToString("C0") <i class="fa-solid fa-xmark"></i> @detail.TotalQuantityPreItems.ToString("N0")
                                        </div>
                                        <span class="badge bg-success rounded-pill">@detail.TotalPricePreItems.ToString("C0")</span>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="d-flex justify-content-end mx-3 mb-1">
                            <span class="fw-bold">Tổng tiền: @order.TotalPrice.ToString("C0")</span>
                        </div>
                        <div class="d-flex justify-content-end mx-3 mb-1">
                            <span class="fw-bold">Giảm giá: <span class="text-danger">-@order.Discount.ToString("C0")</span></span>
                        </div>
                        <div class="d-flex justify-content-end mx-3 mb-1">
                            <span class="fw-bold">Phí vận chuyển: @order.Fee.ToString("C0")</span>
                        </div>
                        <div class="d-flex justify-content-end mx-3 mb-1">
                            <span class="fw-bold">Thuế VAT: @order.Vat.ToString("C0")</span>
                        </div>
                        <div class="d-flex justify-content-end mx-3 mb-1">
                            <span class="fw-bold">Tổng hóa đơn: @order.TotalBill.ToString("C0")</span>
                        </div>

                        <div class="d-flex justify-content-end mb-3 mx-3 gap-2">
                            @if (order.Status == OrderStatus.Ordered)
                            {
                                <button class="float-end btn btn-danger" onclick="startSelected(@order.Id)" data-bs-toggle="modal" data-bs-target="#deleteModal">Hủy đơn hàng</button>
                                <button class="float-end btn btn-info" onclick="startPayment(@order.Id, @order.TotalBill, @order.TotalPrice, '@order.Discount', @order.Fee, @order.Vat)" data-bs-toggle="modal" data-bs-target="#paymentModal">Thanh toán</button>
                            }
                            @if (order.Status == OrderStatus.Completed)
                            {
                                <a class="float-end btn btn-info" href="@order.BillUrl">Hóa đơn</a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Không có kết quả nào phù hợp</p>
        }
    </div>
</div>

<div>
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="deleteModalLabel">Hủy đơn hàng</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn hủy đơn hàng này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-danger" onclick="cancel()">Hủy đơn hàng</button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="paymentModalLabel">Thông tin thanh toán</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="payment-card text-center">
                            <h5 class="mb-4">Cách 1: Mở app ngân hàng và quét mã QR</h5>
                            <div class="qr-code-section mb-4">
                                <img id="paymentQrCode" alt="Payment QR Code">
                            </div>
                            <div id="status_payment"></div>
                        </div>

                        <div class="payment-card">
                            <h5 class="mb-4 text-center">Cách 2: Chuyển khoản thủ công theo thông tin</h5>
                            <div class="text-center mb-3">
                                <img src="https://qr.sepay.vn/assets/img/banklogo/MB.png" alt="MBBank Logo" style="height: 40px;"> <p class="mt-2 mb-0 fw-bold">Ngân hàng <span id="bank"></span></p>
                            </div>
                            <div class="bank-info-section">
                                <div class="row">
                                    <div class="col-5 label">Chủ tài khoản:</div>
                                    <div class="col-7 text-end fw-bold" id="account_name"></div>
                                </div>
                                <div class="row">
                                    <div class="col-5 label">Số tài khoản:</div>
                                    <div class="col-7 text-end fw-bold text-danger" id="account_no"></div>
                                </div>
                                <div class="row">
                                    <div class="col-5 label">Số tiền:</div>
                                    <div class="col-7 text-end fw-bold text-danger" id="bill"></div>
                                </div>
                                <div class="row">
                                    <div class="col-5 label">Nội dung chuyển khoản:</div>
                                    <div class="col-7 text-end fw-bold text-danger" id="orderId"></div>
                                </div>
                            </div>
                            <p class="text-muted mt-4 small">Lưu ý: Vui lòng giữ nguyên nội dung chuyển khoản <span id="orderId2"></span> để hệ thống tự động xác nhận thanh toán</p>
                        </div>
                        <div class="payment-card">
                            <div class="mt-3">
                                <p>Tổng hóa đơn <span class="float-end" id="totalPrice"></span></p>
                                <span id="discount"></span>
                                <p>Phí giao hàng <span class="float-end" id="fee"></span></p>
                                <p>Thuế VAT <span class="float-end" id="vat"></span></p>
                                <p>Tổng tiền <span class="float-end fw-bold" id="totalBill"></span></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
<script src="~/js/purchaseHistory.js"></script>