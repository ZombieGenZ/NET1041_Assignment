@model List<Vouchers>

<div class="container">
<h1 class="text-center">Voucher của tôi</h1>

<div class="row mt-3" id="voucherContainer">
@foreach(Vouchers voucher in Model)
{
    <div class="col-md-6 col-lg-4 mb-3" data-code="@voucher.Code">
        <div class="card border-success">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 me-2" style="flex: 1 1 auto; min-width: 0; word-break: break-word;">@voucher.Name</h5>
                    <span class="badge @(voucher.Type == VoucherTypeEnum.Private ? "bg-warning" : "bg-primary")" style="white-space: nowrap; flex-shrink: 0;">
                        @(voucher.Type == VoucherTypeEnum.Private ? "Riêng tư" : "Công khai")
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <h2 class="text-success">
                        <span>@(voucher.DiscountType == DiscountTypeEnum.Money ? voucher.Discount.ToString("C0") : $"{voucher.Discount}%")</span>
                    </h2>
                    @if (voucher.DiscountType == DiscountTypeEnum.Percent && !voucher.UnlimitedPercentageDiscount)
                    {
                        <small class="text-muted">Tối đa: @voucher.MaximumPercentageReduction?.ToString("C0")</small>
                    } 
                </div>

                <div class="mb-3">
                    <label class="form-label small">Mã voucher:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" value="@voucher.Code" readonly>
                        <button class="btn btn-outline-secondary" type="button" onclick="copyVoucherCode('@voucher.Code')">Copy</button>
                    </div>
                </div>

                <p class="small text-muted">Áp dụng cho tất cả sản phẩm trong cửa hàng</p>

                <div class="alert alert-info py-2">
                    <small>Đơn hàng tối thiểu: <strong>@voucher.MinimumRequirements.ToString("C0")</strong></small>
                </div>

                <div class="mb-2">
                    <small class="text-muted">Còn lại: @voucher.Quantity</small> <br/>
                    <small class="text-muted">Đã sử dụng: @voucher.Used</small>
                </div>

                <div class="row">
                    <div class="col-6">
                        <small class="text-muted">Bắt đầu:</small><br>
                                <small>@voucher.StartTime.ToString("hh:mm:ss dd/MM/yyyy")</small>
                    </div>
                    <div class="col-6">
                        <small class="text-muted">Kết thúc:</small><br>
                        @if (voucher.IsLifeTime)
                        {
                            <small class="text-success">Không giới hạn</small>
                        }
                        else
                        {
                            <small>@voucher.EndTime?.ToString("hh:mm:ss dd/MM/yyyy")</small>
                        }
                    </div>
                </div>

                <div class="mt-3">
                    @if (!voucher.IsLifeTime && voucher.EndTime < DateTime.Now)
                    {
                        <span class="badge bg-danger">Đã hết hạn</span>
                    }
                    else if (voucher.StartTime > DateTime.Now)
                    {
                        <span class="badge bg-secondary">Chưa bắt đầu</span>
                    }
                    else if (voucher.Quantity <= 0)
                    {
                        <span class="badge bg-warning">Hết lượt sử dụng</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Có thể sử dụng</span>
                    }
                </div>
            </div>
        </div>
    </div>
}
</div>
</div>

<script src="~/js/myvoucher.js"></script>