@model SearchProductViewModel
@{
    ViewData["Title"] = "Trang chủ";
}
<div>
    <h1 class="text-center page-title">Sản phẩm của chúng tôi</h1>

    <div class="row mt-3 mb-3 search-container">
        <div class="col-md-6 offset-md-3">
            <div class="input-group search-input-group">
                <input type="text" class="form-control" value="@Model.Text" id="search" placeholder="Tìm kiếm sản phẩm...">
                <button class="btn search-btn" onclick="search()"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
        </div>
    </div>

    <div class="row">
        @if (!string.IsNullOrWhiteSpace(Model.Text))
        {
            <div class="col-md-3">
                <div class="card filter-card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fa-solid fa-filter"></i> Tìm kiếm nâng cao
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="filter-section">
                            <label class="filter-label">Khoảng giá</label>
                            <div class="price-inputs">
                                <input type="number" class="form-control filter-input" id="min"
                                       placeholder="Từ" value="@Model.Min" min="0">
                                <input type="number" class="form-control filter-input" id="max"
                                       placeholder="Đến" value="@Model.Max" min="0">
                            </div>
                        </div>

                        <div class="filter-section">
                            <label class="filter-label">
                                <i class="fa-solid fa-dollar-sign"></i> Sắp xếp theo giá
                            </label>
                            <select class="form-select filter-select" id="priceSort">
                                <option value="">Không sắp xếp</option>
                                @if (Model.PriceSort == "asc")
                                {
                                    <option value="asc" selected>Giá tăng dần</option>
                                }
                                else
                                {
                                    <option value="asc">Giá tăng dần</option>
                                }
                                @if (Model.PriceSort == "desc")
                                {
                                    <option value="desc" selected>Giá giảm dần</option>
                                }
                                else
                                {
                                    <option value="desc">Giá giảm dần</option>
                                }
                            </select>
                        </div>

                        <div class="filter-section">
                            <label class="filter-label">
                                <i class="fa-solid fa-star"></i> Sắp xếp theo đánh giá
                            </label>
                            <select class="form-select filter-select" id="ratingSort">
                                <option value="">Không sắp xếp</option>
                                @if (Model.RatingSort == "asc")
                                {
                                    <option value="asc" selected>Đánh giá tăng dần</option>
                                }
                                else
                                {
                                    <option value="asc">Đánh giá tăng dần</option>
                                }
                                @if (Model.RatingSort == "desc")
                                {
                                    <option value="desc" selected>Đánh giá giảm dần</option>
                                }
                                else
                                {
                                    <option value="desc">Đánh giá giảm dần</option>
                                }
                            </select>
                        </div>

                        <div class="filter-section">
                            <label class="filter-label">
                                <i class="fa-solid fa-chart-line"></i> Sắp xếp theo lượt bán
                            </label>
                            <select class="form-select filter-select" id="salesSort">
                                <option value="">Không sắp xếp</option>
                                @if (Model.SalesSort == "asc")
                                {
                                    <option value="asc" selected>Bán ít nhất</option>
                                }
                                else
                                {
                                    <option value="asc">Bán ít nhất</option>
                                }
                                @if (Model.SalesSort == "desc")
                                {
                                    <option value="desc" selected>Bán chạy nhất</option>
                                }
                                else
                                {
                                    <option value="desc">Bán chạy nhất</option>
                                }
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn reset-btn" onclick="resetSearch()">
                                <i class="fa-solid fa-rotate-left"></i> Đặt lại
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="@(!string.IsNullOrWhiteSpace(Model.Text) ? "col-md-9" : "col-12")">
            @if (Model.Data.Count > 0)
            {
                @foreach (var categoryGroup in Model.Data)
                {
                    <h2 class="category-title">@categoryGroup.Key.Name</h2>
                    <div class="row product-grid row-cols-1 row-cols-md-3 row-cols-lg-@(!string.IsNullOrWhiteSpace(Model.Text) ? "4" : "6") g-2">
                        @foreach (var item in categoryGroup.Value)
                        {
                            <div class="col">
                                <div class="product-card">
                                    <a href="/products/@item.Path" class="product-link">
                                        <img class="product-image" src="@item.ProductImageUrl" alt="@item.Name" />
                                        <div class="product-info">
                                            <h3 class="product-name">@item.Name</h3>
                                            <div class="product-price">
                                                @if (item.Discount > 0)
                                                {
                                                    <span class="discount-badge">@item.Discount%</span>
                                                    <span class="current-price">@((item.Price - (item.Price * item.Discount / 100)).ToString("C0"))</span>
                                                    <del class="original-price">@item.Price.ToString("C0")</del>
                                                }
                                                else
                                                {
                                                    <span class="current-price">@item.Price.ToString("C0")</span>
                                                }
                                            </div>
                                            <div class="product-rating">
                                                <span class="rating-number">@item.AverageEvaluate</span>
                                                <i class="fa-solid fa-star rating-star"></i>
                                                <span>@item.TotalEvaluate.ToString("N0") lượt đánh giá</span>
                                            </div>
                                        </div>
                                    </a>
                                    <div class="p-3 pt-0">
                                        <button class="btn add-to-cart-btn w-100" onclick="addToCart(@item.Id, this)">
                                            <span class="btn-text">
                                                <i class="fa-solid fa-cart-plus me-2"></i>Thêm vào giỏ hàng
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="col">
                    <div class="no-products">
                        <div class="no-products-icon">
                            <i class="fa-solid fa-box-open"></i>
                        </div>
                        <p class="no-products-text">Không có sản phẩm nào phù hợp</p>
                    </div>
                </div>
            }
        </div>     
    </div>
</div>

<link rel="stylesheet" href="~/css/Home-index.css" asp-append-version="true" />
<script src="~/js/search.js"></script>
<script src="~/js/addcarthome.js"></script>